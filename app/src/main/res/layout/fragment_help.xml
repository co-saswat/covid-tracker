<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#C1C7E8"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/cardview_detail_covid"
        android:layout_marginRight="10dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        tools:layout_editor_absoluteX="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:id="@+id/constraint_layout"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="What is COVID-19 ?"
                android:layout_marginLeft="5dp"
                android:id="@+id/detail_of_covid_19"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_bold"
                />

            <TextView
                android:id="@+id/ans_of_covid_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Coronavirus disease 2019 (COVID-19) is an infectious disease caused     by severe acute respiratory syndrome coronavirus 2 (SARS-CoV-2) ,  which was first identified amid an outbreak of respiratory illness   cases in Wuhan City, Hubei Province, China."
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/detail_of_covid_19"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_symptoms_covid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E8B4B5"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_detail_covid"
        app:layout_constraintVertical_bias="0.077" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:id="@+id/symptoms_covid">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Symptoms of COVID-19"
                android:layout_marginLeft="5dp"
                android:id="@+id/symptom_of_covid_19"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_bold"
                />

            <TextView
                android:id="@+id/symptom_ans_of_covid_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Common symptoms include fever, cough, fatigue, shortness of breath,and loss of smell.Complications may include pneumonia and acute respiratory distress syndrome. Symptoms of  COVID-19 can be  relatively non-specific and infected people may be asymptomatic. \n  The two most common symptoms are fever (88%) and dry cough\n(68%). Less common symptoms include fatigue, respiratory sputum production (phlegm), loss of the sense of smell, loss of taste, shortness of breath, muscle and joint pain, sore throat, headache, chills, vomiting, hemoptysis, and diarrhea."
                android:textStyle="bold"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/symptom_of_covid_19"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_preventation_covid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#B7E8B4"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_symptoms_covid"
        app:layout_constraintVertical_bias="0.161">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:id="@+id/prevention_covid">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Prevention of COVID-19"
                android:layout_marginLeft="5dp"
                android:id="@+id/prevention_of_covid_19"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_bold"
                />

            <TextView
                android:id="@+id/prevention_ans_of_covid_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=" These are three most Important Prevention that shoul be taken :-\n 1.Hand washing : Hand washing is recommended to prevent the spread of the disease.\n 2.Face masks and respiratory hygiene : The WHO has recommended healthy people wear masks only if they are at high risk, such as those who are caring for a person with COVID-19. \n 3.Social distancing : Social distancing (also known as physical distancing) includes infection control actions intended to slow the spread of disease by minimising close contact between individuals"
                android:textStyle="bold"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/prevention_of_covid_19"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/developer"
        android:layout_width="350dp"
        android:layout_height="116dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#F6EC90"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_preventation_covid">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:id="@+id/devloper_name">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" DEVELOPED BY \n SASWAT SACHIN MISHRA \n EMAIL:ssm13092013@gmail.com"
            android:layout_marginLeft="5dp"
            android:id="@+id/developer_name_app"
            android:textSize="11dp"
            android:fontFamily="@font/poppins_bold"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SPECIAL THANK : \n  cse department of siet  and ABHISEK MOHANTY"
                android:layout_marginLeft="5dp"
                android:textAllCaps="true"
                android:id="@+id/developer_special_thank"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/developer_name_app"
                android:fontFamily="@font/poppins_bold"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>